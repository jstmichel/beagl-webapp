# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C# files
[*.cs]
# Require file-scoped namespaces
csharp_style_namespace_declarations = file_scoped:warning

# Prefer explicit type instead of var
csharp_style_var_for_built_in_types = false:error
csharp_style_var_when_type_is_apparent = false:error
csharp_style_var_elsewhere = false:error

# Private fields should begin with _
dotnet_naming_rule.private_fields_should_have_underscore.symbols = private_fields
dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private
dotnet_naming_symbols.private_fields.required_modifiers =
dotnet_naming_rule.private_fields_should_have_underscore.style = underscore_prefix
dotnet_naming_style.underscore_prefix.required_prefix = _
dotnet_naming_style.underscore_prefix.capitalization = camel_case
dotnet_naming_rule.private_fields_should_have_underscore.severity = warning

csharp_style_expression_bodied_properties = never:warning

# Prefer 'readonly' for fields where possible
dotnet_style_readonly_field = true:warning

# Prefer using pattern matching
csharp_style_pattern_matching_over_is_with_cast_check = true:warning

# Prefer 'const' for constants
dotnet_style_prefer_const_literals = true:warning

# Prefer object/collection initializers
dotnet_style_object_initializer = true:warning
dotnet_style_collection_initializer = true:warning
# Prefer 'is not null' over '!= null'
csharp_style_prefer_is_not_expression = true:warning

# Remove unnecessary usings
dotnet_remove_unnecessary_usings = true

# Use explicit access modifier
dotnet_style_require_accessibility_modifiers = always:warning

# Encoding
dotnet_encoding_utf8 = true

# Indentation and formatting
indent_style = space
indent_size = 4

# Newline at end of file
insert_final_newline = true

# File header (for analyzers that support it)
file_header_template = MIT License - Copyright (c) 2025 Jonathan St-Michel

# Require XML documentation for publicly visible types and members
dotnet_diagnostic.CS1591.severity = warning
dotnet_diagnostic.CA1812.severity = none
dotnet_diagnostic.CA2007.severity = none
dotnet_diagnostic.CA1822.severity = warning

# Prefer internal classes over public (CA1515)
dotnet_diagnostic.CA1515.severity = warning

# (Optional) You can change 'warning' to 'error' to be stricter
dotnet_diagnostic.CS1591.severity = warning

# Prefer using explicit tuple names
dotnet_style_explicit_tuple_names = true:warning

# Prefer switch expressions where possible
csharp_style_prefer_switch_expression = true:warning

# Prefer inlined variable declarations in out parameters
csharp_style_inlined_variable_declaration = true:warning

# Prefer using 'using' declarations instead of statements
csharp_style_prefer_using_declaration = true:warning

# Prefer simplified boolean expressions
csharp_style_prefer_simplified_boolean_expressions = true:warning

# Prefer simplified conditional expressions
csharp_style_prefer_conditional_expression_over_assignment = true:warning

# Prefer null propagation
csharp_style_prefer_null_propagation = true:warning

# Prefer collection expressions (C# 12+)
csharp_style_prefer_collection_expression = true:suggestion

# End of .editorconfig
