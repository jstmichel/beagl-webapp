    "version": "0.2.0",
    "configurations": [
        {
            "type": "aspire",
            "request": "launch",
            "name": "Aspire",
            "program": ""
        },
        {
            "name": "Blazor",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Beagl.WebApp/bin/Debug/net10.0/Beagl.WebApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Beagl.WebApp",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/src/Beagl.WebApp/Views"
            },
            "launchBrowser": {
                "enabled": true
            }
        }
    ]
}
